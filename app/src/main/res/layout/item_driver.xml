<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_pressed"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imv_driver"
        android:layout_width="@dimen/list_driver_height"
        android:layout_height="@dimen/list_driver_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_no_image" />

    <TextView
        android:id="@+id/tv_driver_name"
        style="@style/Fill_Wrap"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/imv_driver"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_driver_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_driver_name"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imv_driver"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/gray_light"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imv_rating"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_below="@+id/tv_driver_name"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/tv_driver_rating"
        android:src="@drawable/ic_star_rating" />

    <TextView
        android:id="@+id/tv_driver_licenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_driver_rating"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/imv_driver"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaabbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbb"
        android:textColor="#3F51B5"
        android:textSize="14sp" />

</RelativeLayout>
